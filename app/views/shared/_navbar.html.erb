<%# write a tailwind navbar %>
<div class="mt-11">
  <div class="flex justify-center bg-gray-800 p-6 mt-11">
    <%= link_to notebooks_path, class: "block mt-4 lg:inline-block lg:mt-0 text-gray-500 hover:text-white mr-6 #{'text-white' if controller_name == 'notebooks'}" do %>
      Notebooks <span id="notebooks_count" class="components--counter-red"><%= Notebook.count %></span>
    <% end %>
    <%= link_to tags_path, class: "block mt-4 lg:inline-block lg:mt-0 text-gray-500 hover:text-white mr-6 #{'text-white' if controller_name == 'tags'}" do %>
      Tags <span id="tags_count" class="components--counter-red"><%= Tag.count %></span>
    <% end %>
    <%= link_to notes_path, class: "block mt-4 lg:inline-block lg:mt-0 text-gray-500 hover:text-white mr-6 #{'text-white' if controller_name == 'notes'}" do %>
      Notes <span id="notes_count" class="components--counter-red"><%= Note.count %></span>
    <% end %>
  </div>
</div>
